#	$NetBSD: dot.shrc,v 1.3 2007/11/24 11:14:42 pavel Exp $

if [ -f /etc/shrc ]; then
	. /etc/shrc
fi

. /home/lucas/.prompt.ksh

case "$-" in *i*)
	# interactive mode settings go here
		if test $(id -u) != 0; then
			# PS1="$(printf '$(whoami)\x1b[31m@\x1b[0m$(hostname) \x1b[34m$(pwd) \x1b[0m$ ')"
			PS1="$(printf "$(prompt_user) $(prompt_directory) "'$(prompt)') "
		else
			# PS1="$(printf '$(pwd) # ')"
			PS1="$(printf "$(prompt_directory) "'$(root_prompt)') "
		fi
		export PS1
	;;
esac
